<!DOCTYPE html>
<!-- Website template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<title>News - Travlr Getaways Website Template</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{> header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
									{{#each newsJson}}
									<li>
										<a href="/news">{{this.articleName}}</a>
									</li>
									{{/each}}
								</ul>
								<h3>Vaction Tips</h3>
								<ul>
									{{#each tipsJson}}
									<li>
										<a href="/news">{{this.name}}</a>
									</li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								{{#with newsJson.[0]}}
								<img src={{this.image}} alt="Img">
								<h2>{{this.articleName}}</h2>
								<span class="time">{{this.date}}<br> by: {{this.author}}</span>
								{{{this.description}}}
								{{/with}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{> footer}}
	</div>
</body>
</html>